{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": [
      "ts-jest",
      {
        "tsconfig": "tsconfig.json"
      }
    ]
  },
  
  "setupFilesAfterEnv": ["<rootDir>/test/global-setup.ts"],
  "maxConcurrency": 1,
  "maxWorkers": 1  
}
